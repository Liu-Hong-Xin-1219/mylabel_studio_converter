    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode":false, 
            "args": [
                "import",
                "yolo",
                "--is-obb",
                "-i", "D:\\pcbobb" ,
                "-o", "pcb_yolo_obb.json",
                "--image-root-url", "/data/local-files/?d=images"
                
            ]
        }
    ]
}